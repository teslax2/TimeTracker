<UserControl x:Class="TimeTracker.View.UserLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeTracker.View"
             mc:Ignorable="d" Height="120" Width="180">
    <StackPanel>
        <TextBox x:Name="Login" Margin="10,30,10,0" TextWrapping="Wrap" VerticalAlignment="Top"  Background="White" Foreground="Black" Text="{Binding LoginProperty}"/>
        <PasswordBox x:Name="Password" Margin="10,10,10,0" VerticalAlignment="Top" />
        <Button x:Name="Submit" Content="Button" HorizontalAlignment="Right" Margin="10,10,10,0" VerticalAlignment="Top" Width="75" Command="{Binding CommandProperty}" CommandParameter="{Binding ElementName=Password}"/>
    </StackPanel>
</UserControl>
